<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_collapseMode="pin"
        android:background="@drawable/recttoolbar"
        app:titleTextColor="@color/white"
        android:theme="@style/AppTheme.AppBarOverlay"/>


    <RelativeLayout
    android:layout_marginTop="80dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true">

    <RelativeLayout
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/liner_akun"
        android:elevation="5dp"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Buku"
                android:textColor="#FF172948" />


            <EditText
                android:id="@+id/et_jenisbuku"
                android:inputType="textAutoComplete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true" />

            <LinearLayout
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                   android:layout_weight="1"
                    android:id="@+id/btnSimpanjenis"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/rect1"
                    android:text="Simpan"
                    android:textAllCaps="false"
                    android:textColor="#fff" />
                <Button
                   android:layout_weight="1"
                    android:id="@+id/btnCariJenis"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/rect1"
                    android:text="Cari"
                    android:textAllCaps="false"
                    android:textColor="#fff" />
                <Button
                    android:layout_weight="1"
                    android:id="@+id/btnHapusJenis"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/rect1"
                    android:text="Hapus"
                    android:textAllCaps="false"
                    android:textColor="#fff" />

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <RelativeLayout
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/liner_akun"
            android:elevation="5dp"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jenis Buku Lama"
                    android:textColor="#FF172948" />

                <EditText
                    android:id="@+id/et_jenisbukulama"
                    android:inputType="textAutoCorrect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jenis Buku Baru"
                    android:textColor="#FF172948" />
                <EditText
                    android:id="@+id/et_idjenisbukubaru"
                    android:inputType="textAutoCorrect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true" />

                <Button
                    android:id="@+id/btnUpdatejenis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/rect1"
                    android:text="Update"
                    android:textAllCaps="false"
                    android:textColor="#fff" />
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>